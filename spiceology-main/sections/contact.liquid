{% style %}
  #shopify-section-{{ section.id }} section {
    padding-top: {{ section.settings.padding_top_desk }}px;
    padding-bottom: {{ section.settings.padding_bottom_desk }}px;
  }

  @media (max-width: 768px) {
    #shopify-section-{{ section.id }} section {
      padding-top: {{ section.settings.padding_top_mob }}px;
      padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    } 
  }
{% endstyle %}
<section class="w-full flex flex-col items-center pt-20 px-2.5">
  <div class="flex flex-col">
    <div class="">{{ section.settings.heading }}</div>
    <div class="pt-5">{{ section.settings.description }}</div>
  </div>

  <div class="max-w-[946px] w-full mx-auto">
    {% form 'contact' %}
      {{ form.errors | default_errors }}
      <div class="md:grid md:grid-cols-2 flex flex-col gap-5 lg:gap-x-5 lg:gap-y-7.5 gap:5">
        <div class="md:col-span-1 flex flex-col">
          <label
            for="name"
          >
            Name<sup>*</sup>
          </label>
          <input
            class="input__primary py-3.5"
            id="name"
            type="text"
            name="contact[name]"
            value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
            placeholder="Enter Your Name"
            value="{{ customer.first_name }} {{ customer.last_name }}"
            autocomplete="name"
            required
          />
        </div>

        <div class="md:col-span-1 flex flex-col">
          <label
            for="email"
          >
            Email<sup>*</sup>
          </label>
          <input
            class="input__primary py-3.5"
            id="email"
            type="email"
            name="contact[email]"
            value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
            placeholder="Enter Your Email"
            value="{{ customer.email }}"
            autocomplete="email"
            required
          />
        </div>

        <div class="md:col-span-1 flex flex-col">
          <label
            for="phone"
          >
            Phone Number<sup>*</sup>
          </label>
          <input
            class="input__primary py-3.5"
            id="phone"
            type="tel"
            name="contact[phone]"
            value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
            placeholder="Enter Your Phone"
            value="{{ customer.phone }}"
            autocomplete="tel"
            pattern="[0-9\-]*"
            required
          />
        </div>

        <div class="md:col-span-1 flex flex-col">
          <label
            for="subject"
          >
            Subject<sup>*</sup>
          </label>
          <input
            class="input__primary py-3.5"
            id="subject"
            type="text"
            name="contact[Subject Line]"
            placeholder="Enter a subject for your message"
            required
          />
        </div>

        <div class="col-span-2 flex flex-col">
          <label
            for="body"
          >
            Message<sup>*</sup>
          </label>
          <textarea
            class="input__primary py-3.5 lg:h-32 h-36"
            id="body"
            {% if form.body %}
              value="{{ form.body }}"
            {% endif %}
            name="contact[body]"
            placeholder="Enter Your Message"
          ></textarea>
        </div>

        <div class="col-span-2 flex justify-center">
          <button
            type="submit"
            class="bg-black px-25 py-3.5 lg:w-fit w-full text-white"
          >
            Submit
          </button>
        </div>
      </div>
    {% endform %}
  </div>
</section>


{% schema %}
{
  "name": "Contact",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top_desk",
      "min": 20,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Top(Desktop)",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_top_mob",
      "min": 20,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Top(Mobile)",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom_desk",
      "min": 30,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Bottom(Desktop)",
      "default": 140
    },
    {
      "type": "range",
      "id": "padding_bottom_mob",
      "min": 30,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Bottom(Mobile)",
      "default": 120
    }
  ]
}
{% endschema %}
