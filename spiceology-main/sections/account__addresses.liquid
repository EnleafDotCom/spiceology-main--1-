<section
  x-data="{
    showForm: false
  }"
  class="container"
>
  <div class="md:grid grid-cols-12">
    <div class="md:col-span-2">
      {% render 'account__nav', section: 'addresses' %}
    </div>

    <div class="md:col-span-9 lg:col-span-10 pb-32 account--main-bar">
      <div class="md:px-7">
        <h2 class="text-4xl text-black pt-5 md:pt-14 pt6--md mb-5">
          Addresses
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-5 mb-10">
          {% for address in customer.addresses %}
            <div class="border border-solid border-black p-5 flex flex-col">
              <div class="flex-1">
                {% if address == customer.default_address %}
                  <div class="text-black font-bold">
                    Default
                  </div>
                {% endif %}

                <div class="mb-5">
                  {{ address | format_address }}
                </div>
              </div>

              <div class="flex gap-5">
                <div>
                  <button
                    class="underline"
                    type="button"
                    @click="showForm = '{{ address.id }}'"
                  >
                    Edit Address
                  </button>
                </div>
                <div>
                  <form
                    method="post"
                    action="/account/addresses/{{ address.id }}"
                  >
                    <input
                      type="hidden"
                      name="_method"
                      value="delete"
                    />
                    <button
                      class="underline"
                      type="submit"
                    >
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          {% else %}
            No addresses
          {% endfor %}
        </div>

        {% for address in customer.addresses %}
          <div
            x-cloak
            x-show="showForm == '{{ address.id }}'"
          >
            {% form 'customer_address', address %}
              <div class="bb--gray pb3 mb3">
                <h2 class="text-2xl text-black pb-5 border-b border-black mb-6">
                  Edit Address
                </h2>

                {% if address == customer.default_address %}
                  {% assign default = true %}
                {% else %}
                  {% assign default = false %}
                {% endif %}

                {% render 'account__address-form', form: form, default: default %}

                <div class="mt-5 flex gap-5 items-center">
                  <button
                    class="button--primary"
                    type="submit"
                  >
                    Save address
                  </button>
                  <button
                    @click="showForm = false"
                    class="underline"
                    type="button"
                  >
                    Cancel
                  </button>
                </div>
              </div>
            {% endform %}
          </div>
        {% endfor %}

        <div>
          <div
            x-show="showForm == false"
            class="md:text-left text-center"
          >
            <button
              @click="showForm = 'create'"
              class="button--primary"
              type="button"
            >
              Add new address
            </button>
          </div>

          <div
            x-cloak
            x-show="showForm == 'create'"
            class="mt-8"
          >
            {% form 'customer_address', customer.new_address %}
              <h2 class="text-2xl text-black mt-12 pb-5 border-b border-black mb-6">
                Add new address
              </h2>

              {% render 'account__address-form', form: form %}

              <div class="mt-5 flex gap-5 items-center">
                <button
                  class="button--primary"
                  type="submit"
                >
                  Save new address
                </button>
                <button
                  @click="showForm = false"
                  class="underline"
                  type="button"
                >
                  Cancel
                </button>
              </div>
            {% endform %}
          </div>
        </div>

        <div class="md:hidden text-center mt-10">
          <a
            href="/account/logout"
            class="underline"
          >
            Logout
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}

{
  "name": "t:sections.adresses.name",
  "tag": "section",
  "settings": []
}

{% endschema %}
