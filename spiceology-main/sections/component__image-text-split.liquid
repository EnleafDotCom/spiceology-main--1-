<div x-data="{ fadeIn: false }" x-intersect.threshold.20="fadeIn = true" :class="fadeIn && 'animate-fade-in-500'" class="opacity-0 w-full relative flex flex-col justify-center items-center section-p-x section-p-b {{ section.settings.padding_bottom }} {% if section.settings.image_orientation == 'left' %} lg:flex-row {% else %} lg:flex-row-reverse {% endif %}">
  {% if section.settings.image %}
    <div class="w-full max-w-[700px]">
      {% render 'image', 
        image_desktop: section.settings.image,  
        width_desktop: '2000x', 
        width_mobile: '500x', 
        ratio_desktop: '100%',
        ratio_mobile: '100%',
        lazy: true,
        image_classes: '' 
      %}
    </div>
  {% endif %}
  <div class="w-full max-w-[570px]">
    {% render 'cta-card',
      heading: section.settings.heading,
      eyebrow: section.settings.eyebrow,
      copy: section.settings.copy,
      heading_classes: 'heading-md pb-6 lg:pr-[100px] normal-case',
      eyebrow_classes: 'para-sm text-sm pb-2 opacity-75',
      copy_classes: 'pb-9 md:pb-[100px] para-xl lg:pr-[100px]',    
      desktop_classes: 'hidden lg:block',
      mobile_classes: 'lg:hidden',
      background_color_desktop: section.settings.background_color_desktop,
      background_color_mobile: section.settings.background_color_mobile,
      text_color_desktop: section.settings.text_color_desktop,
      text_color_mobile: section.settings.text_color_mobile,        
      buttons: section.blocks    
    %} 
  </div>  
</div>


{% schema %}
{
  "name": "Image Text Split",
  "class": "section-image-text-split",
  "settings": [
    {
      "type": "header",
      "content": "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Primary Image"
    }, 
    {
      "type": "select",
      "id": "image_orientation",
      "label": "Primary Image Orientation",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Text Settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eybrow",
      "info": "This text will appear above the heading."
    },
    {
      "type": "richtext",
      "id": "copy",
      "label": "Copy"
    },
    {
      "type": "color",
      "id": "text_color_desktop",
      "label": "Text Color - Desktop",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color_mobile",
      "label": "Text Color - Mobile",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Component Settings"
    },
    {
      "type": "color",
      "id": "background_color_desktop",
      "label": "Background Color - Desktop",
      "default": "#e6e4da"
    },
    {
      "type": "color",
      "id": "background_color_mobile",
      "label": "Background Color - Mobile",
      "default": "#e6e4da"
    },        
    {
      "type": "select",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "info": "This indicates how much padding should be added to the bottom of the section.",
      "options": [
        {
          "value": "none",
          "label": "None"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        }
      ],
      "default": "medium"
    }        
  ],
  "blocks": [
    {
      "name": "Button",
      "type": "button",
      "limit": 2,
      "settings": [
        {
          "type": "header",
          "content": "Button Settings"
        },        
        {
          "type": "text",
          "id": "text",
          "label": "text",
          "default": "Shop Now"
        },
        { 
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Link to the page you want to send the user to."
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button Color",
          "default": "#000000"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "text Color",
          "default": "#ffffff"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Text Split"
    }
  ]
}
{% endschema %}
