<section x-data="{ fadeIn: false }" x-intersect.threshold.20="fadeIn = true" :class="fadeIn && 'animate-fade-in-500'" class="custom lg:pt-20 pt-12 lg:pb-50 pb-36 lg:px-15 px-2.5 opacity-0">
  <div class="lg:grid grid-cols-12 gap-5 flex flex-col-reverse">
    <div class="lg:col-span-5 flex flex-col">
      <div class="utility-lg uppercase mb-2.5">{{ section.settings.subheading }}</div>
      <div class="heading-xl capitalize mb-5 lg:pr-10">{{ section.settings.heading }}</div>
      <div class="body-md mb-10 lg:pr-10">{{ section.settings.description }}</div>
      {% if section.settings.btn_text != blank %}
      <a class="button__primary lg:w-fit w-full" href="{{ section.settings.btn_url }}">{{ section.settings.btn_text }}</a>
      {% endif %}
    </div>
    <div class="lg:col-span-7 lg:flex">
      <div class="lg:w-2/3 w-full relative">
        {% render 'image', 
          image_desktop: section.settings.main_image,  
          image_mobile: section.settings.main_image, 
          width_desktop: '1000x', 
          width_mobile: '500x',
          lazy: true,
          image_classes: 'rounded-6 md:w-auto w-full' 
        %}
        <div class="absolute lg:top-5 lg:left-5 lg:bottom-auto lg:right-auto bottom-2.5 left-2.5 right-2.5 lg:p-3 p-2.5 flex gap-4 items-center bg-white">
          {% render 'image', 
            image_desktop: section.settings.team_photo,  
            image_mobile: section.settings.team_photo, 
            width_desktop: '48x', 
            width_mobile: '48x',
            lazy: true,
            image_classes: 'rounded-full' 
          %}
          <div class="utility-lg">{{ section.settings.team_name | newline_to_br }}</div>
        </div>
      </div>
      <div class="lg:w-1/3 hidden lg:block lg:pl-5">
        {% render 'image', 
          image_desktop: section.settings.second_image,  
          image_mobile: section.settings.second_image, 
          width_desktop: '500x', 
          width_mobile: '500x',
          lazy: true,
          image_classes: 'rounded-6' 
        %}
      </div>
    </div>
  </div>
</section>
