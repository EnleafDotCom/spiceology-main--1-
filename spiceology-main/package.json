{
  "name": "bf-shopify-os2",
  "version": "1.0.0",
  "description": "",
  "repository": "https://github.com/Bondfire/bf-os2-starter.git",
  "author": "Bondfire Inc.",
  "private": true,
  "keywords": [
    "workflow",
    "webpack",
    "babel",
    "shopify",
    "sass",
    "postcss"
  ],
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "init": "rm -rf .git && git init -b main",
    "clean": "rm -rf assets/* && touch assets/.gitkeep",
    "start": "run-p serve watch",
    "serve": "shopify theme dev --store=spiceology",
    "build": "webpack --config .config/webpack/webpack.config.prod.js",
    "watch": "webpack watch --config .config/webpack/webpack.config.dev.js",
    "zip": "run-s build && shopify theme package .",
    "lint": "shopify theme check --config .theme-check.yml",
    "pull": "shopify theme pull -n",
    "push": "shopify theme push --ignore \"config/*.json\"",
    "deploy": "run-s format build push",
    "create": "run-s format build && shopify theme push --unpublished",
    "prepare": "husky install .config/.husky"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.4.0",
    "husky": "^7.0.2",
    "media-query-plugin": "^1.5.0",
    "mini-css-extract-plugin": "^2.4.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "postcss-loader": "^6.2.0",
    "postcss-preset-env": "^8.3.2",
    "prettier": "^2.4.1",
    "sass": "^1.43.2",
    "sass-loader": "^12.2.0",
    "size-plugin": "2.0.2",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.8.0",
    "webpack-merge": "^5.8.0",
    "webpack-remove-empty-scripts": "^0.7.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.12.0",
    "@alpinejs/focus": "^3.12.0",
    "@alpinejs/intersect": "^3.12.0",
    "@babel/plugin-transform-react-jsx": "^7.16.0",
    "@glidejs/glide": "^3.4.1",
    "@shopify/theme-addresses": "1.0.0",
    "@shopify/theme-currency": "^4.1.1",
    "@tailwindcss/forms": "^0.5.3",
    "alpinejs": "^3",
    "js-cookie": "^3.0.5",
    "keen-slider": "^6.8.6",
    "lodash": "^4.17.21",
    "qs": "^6.13.0",
    "swiper": "^11",
    "tailwindcss": "^3.3.1"
  }
}
