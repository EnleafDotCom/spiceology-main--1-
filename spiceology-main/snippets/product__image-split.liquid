{% assign image = product.metafields.accentuate.image_split_image | first %}

<section x-data="{ fadeIn: false }" x-intersect.threshold.20="fadeIn = true" :class="fadeIn && 'animate-fade-in-500'"  class="flex flex-col-reverse lg:grid lg:grid-cols-12 gap-5 w-full px-2.5 lg:px-5 py-20 lg:py-36 opacity-0">
    <div class="lg:col-span-6 flex flex-col justify-center px-2.5 lg:pl-12 lg:pr-24">
        <h3 class="heading-lg lg:heading-2xl pb-4 lg:pb-6 lg:max-w-[543px] pr-16 lg:pr-0">{{ product.metafields.accentuate.image_split_headline }}</h3>
        <div class="heading-xs lg:heading-sm leading-150 lg:leading-150 rte-simple pr-2.5 lg:pr-0">{{ product.metafields.accentuate.image_split_paragraph.html |  newline_to_br }}</div>
    </div>
    <div class="lg:col-span-6 flex flex-col items-start justify-center lg:pr-12">
        <img class="hidden lg:flex w-full aspect-square object-cover rounded-6" src="{{ image.src | append: '&width=1000' }}" alt="{{ image.alt }}" loading="lazy">
        <img class="lg:hidden w-full aspect-square object-cover rounded-6" src="{{ image.src | append: '&width=500' }}" alt="{{ image.alt }}" loading="lazy">
    </div>
</section>