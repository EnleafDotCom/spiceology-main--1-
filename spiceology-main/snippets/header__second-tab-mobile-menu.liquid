                    {% else %}
                      <span class="link-underlined pt-5">Read More</span>
                    {% endif %}
                  </a>
                   <hr class="mb-5">
        {% elsif index == 4 %}
            {% assign recipe_3 = section.settings.second_dropdown_tab_recipe_3 %}
