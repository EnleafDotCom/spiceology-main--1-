{% assign image = product.metafields.accentuate.ingredient_detail_image | first %}

<section class="lg:grid lg:grid-cols-12 lg:gap-5 w-full py-32 px-2.5 lg:px-0">
   <div class="col-span-10 col-start-2 flex flex-col-reverse lg:grid lg:grid-cols-10">
        <div class="lg:col-span-4 flex flex-col justify-between items-start bg-white p-5 lg:p-[30px] rounded-bl-6 rounded-br-6 lg:rounded-6">
            <h6 class="heading-sm font-500 pb-14 lg:pb-0 w-3/4">{{ product.title }}</h6>
            <div class="flex flex-col items-start pb-8">
                <hr class="h-0.5">
                <div class="flex pt-2.5 pb-4 w-full">
                    <h6 class="w-1/3 lg:w-1/4 utility-lg uppercase">
                        About
                    </h6>
                    <p class="w-2/3 lg:w-3/4 utility-sm text-[13px] opacity-80">{{ product.metafields.accentuate.about }}</p>
                </div>
                <hr>
                <div class="flex pt-2.5 pb-4 w-full">
                    <h6 class="w-1/3 lg:w-1/4 utility-lg uppercase">
                        Pair with
                    </h6>
                    <p class="w-2/3 lg:w-3/4 utility-sm text-[13px] opacity-80 lg:pr-8">{{ product.metafields.accentuate.pair_with }}</p>
                </div>
                <hr>
                <div class="flex pt-2.5 w-full">
                    <h6 class="w-1/3 lg:w-1/4 utility-lg uppercase">
                        Origin
                    </h6>
                    <p class="w-2/3 lg:w-3/4 utility-sm text-[13px] opacity-80">{{ product.metafields.accentuate.origin }}</p>
                </div>
            </div>
        </div>
        <div class="lg:col-span-6 lg:pl-5">
            <img class="hidden lg:flex w-full aspect-[1.3] object-cover rounded-6" src="{{ image.src | append: '&width=1000' }}" alt="{{ image.alt }}" loading="lazy">
            <img class="lg:hidden w-full aspect-[1.3] object-cover rounded-tl-6 rounded-tr-6" src="{{ image.src | append: '&width=500' }}" alt="{{ image.alt }}" loading="lazy">
        </div>
   </div>
</section>