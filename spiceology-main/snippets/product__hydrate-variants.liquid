[
  {% for variant in product.variants %}
		{
			id: {{ variant.id }},
      {% if variant.compare_at_price and variant.price < variant.compare_at_price %}
        variantCompareAtPrice: {{ variant.compare_at_price }},
      {% endif %}
      variantPrice: {{ variant.price }},
      optionValues: [
				{% if variant.option1 %}`{{ variant.option1 | remove: '"' }}`{% endif %}
				{% if variant.option2 %}, `{{ variant.option2 | remove: '"' }}`{% endif %}
				{% if variant.option3 %}, `{{ variant.option3 | remove: '"' }}`{% endif %}
			],
			isAvailable: {{ variant.available }},
      {% if variant.image %}
        image: {
          {% for image in product.images %}
            {% if image.id == variant.image.id %}
              index: {{ forloop.index0 }},
              {% break %}
            {% endif %}
          {% endfor %}
          id: {{ variant.image.id }},
          src: `{{ variant.image | image_url: width: 900 }}`,
          width: {{ variant.image.width }},
          height: {{ variant.image.height }},
        },
      {% endif %}
		}{% unless forloop.last %},{% endunless %}
	{% endfor %}
]
