{% assign video = product.metafields.accentuate.video_split_video | first %}
{% assign image = product.metafields.accentuate.video_split_poster_image | first %}
<section x-data="{ fadeIn: false }" x-intersect.threshold.20="fadeIn = true" :class="fadeIn && 'animate-fade-in-500'" class="flex flex-col-reverse lg:grid lg:grid-cols-12 gap-5 px-2.5 lg:px-5 opacity-0">
    <div class="lg:col-span-5 flex flex-col items-start lg:pt-2.5 px-2.5 lg:pl-9 lg:pr-14">
        <h6 class="utility-sm uppercase pb-[5px] lg:pb-2.5">{{ product.metafields.accentuate.eyebrow }}</h6>
        <h5 class="heading-lg lg:heading-xl pb-5 lg:pb-6">{{ product.metafields.accentuate.video_split_headline }}</h5>
        <p class="body-md lg:body-lg">{{ product.metafields.accentuate.video_split_paragraph }}</p>
    </div>
    <div class="lg:col-span-7">
        {%
        render 'video_player',
        video: video.src,
        poster: image.src,
        video_classes: 'h-[52vw] lg:h-[36vw] object-cover w-full rounded-6',
        muted: false
      %}
    </div>
</section>